{% extends 'base.html.twig' %}

{% block title %}Hello PageController!{% endblock %}

{% block body %}

{% for item in categories %}
    <a href="{{ path('category', {category: item.name}) }}">{{ item.name }}</a>
{% endfor %}

<div class="row">
    {% for post in posts %}
        <div class="col-md-2 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ post.title }}</h5>
                    <p class="card-text">{{ post.content }}</p>
                    <img src={post.image} alt=""> 
                    <a href="{{ path('show', {'title': post.title}) }}" class="btn btn-primary">Voir l'article</a>
                </div>
            </div>
        </div>

    {% endfor %}
</div>

{{ knp_pagination_render(posts) }}

{% endblock %}
